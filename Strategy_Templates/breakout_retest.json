{
  "strategy_name": "BreakoutWithRetest",
  "position_type": "long",
  "indicators": [
    { "name": "SMA", "params": { "window": 50 }, "on_column": "SPX_close", "output_col": "SPX_SMA_50" },
    { "name": "SMASlope", "params": { "window": 50, "lookback": 1 }, "on_column": "ES_close", "output_col": "ES_SMA_50_slope" },
    { "name": "EMA", "params": { "span": 9 }, "on_column": "ES_close", "output_col": "ES_EMA_9" },
    { "name": "EMA", "params": { "span": 15 }, "on_column": "ES_close", "output_col": "ES_EMA_15" },
    { "name": "VIXChange", "params": { "lookback": 20 }, "on_column": "VIX_close", "output_col": "VIX_declining" },
    { "name": "BreakoutRetest", "params": { "instrument": "ES", "breakout_window": 20, "retest_window": 7, "retest_threshold": 0.5 }, "on_column": "", "output_col": "ES_breakout_retest" }
  ],
  "param_grid": {
    "vix_threshold": [22]
  },
  "entry_rules": [
    "SPX_close > SPX_SMA_50",
    "FED_STANCE <= 2",
    "VIX_close < @vix_threshold",
    "VIX_declining == True",
    "NAAIM < 80",
    "CNN_FEAR_GREED < 70",
    "ES_SMA_50_slope == True",
    "ES_breakout_retest == True"
  ],
  "exit_conditions": ["percentage_stop", "take_profit", "trailing_stop", "ma_crossover"],
  "exit_parameters": {
    "stop_loss_pct": 1.0,
    "take_profit_pct": 4.0,
    "trailing_stop_loss_pct": 2.0
  }
}