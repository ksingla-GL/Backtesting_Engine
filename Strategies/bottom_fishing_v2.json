{
  "strategy_name": "VolatilityEventSimplest",
  "position_type": "long",
  "indicators": [
    { "name": "SMA", "params": { "window": 50 }, "on_column": "ES_close", "output_col": "ES_SMA_50" },
    { "name": "SMA", "params": { "window": 200 }, "on_column": "ES_close", "output_col": "ES_SMA_200" },
    { "name": "EMA", "params": { "span": 9 }, "on_column": "ES_close", "output_col": "ES_EMA_9" },
    { "name": "EMA", "params": { "span": 15 }, "on_column": "ES_close", "output_col": "ES_EMA_15" },
    { "name": "RSI", "params": { "window": 2 }, "on_column": "ES_close", "output_col": "ES_RSI_2" },
    { "name": "RSI", "params": { "window": 10 }, "on_column": "ES_close", "output_col": "ES_RSI_10" },
    { "name": "RollingHigh", "params": { "window": 20 }, "on_column": "ES_high", "output_col": "ES_High_20D" },
    { "name": "DeclineFromPeak", "params": {}, "on_column": "ES_close", "peak_column": "ES_High_20D", "output_col": "ES_decline_from_peak" },
    { "name": "PrevDayClose", "params": {}, "on_column": "VX_close", "output_col": "VX_Prev_day_close" },
    { "name": "VIXSpike", "params": {}, "on_column": "VX_close", "prev_close_col": "VX_Prev_day_close", "output_col": "VX_spike" }
  ],
  "param_grid": {
    "es_decline_pct": [-4, -5, -6, -7]
  },
  "entry_rules": [
    "ES_decline_from_peak <= @es_decline_pct",
    "ES_close > ES_SMA_200",
    "((VX_spike > 20) | (VIX_close > 30))"
  ],
  "exit_conditions": [
    "percentage_stop",
    "take_profit",
    "trailing_stop"
  ],
  "exit_parameters": {
    "stop_loss_pct": 1.0,
    "take_profit_pct": 3,
    "trailing_stop_loss_pct": 2
  }
}