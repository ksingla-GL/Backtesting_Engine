{
  "strategy_name": "CPIBottom",
  "position_type": "long",
  "exit_type": "simple_exits",
  "indicators": [
    {
      "name": "PriceAtTime",
      "params": { "time": "08:25:00" },
      "on_column": "ES_close",
      "output_col": "ES_825_price"
    },
    {
      "name": "ESDeclineFromTime",
      "params": { "base_price_col": "ES_825_price", "threshold": -1.0 },
      "on_column": "",
      "output_col": "es_down_1pct_from_825"
    },
    {
      "name": "VIXRollingDecline",
      "params": { "window": 10},
      "on_column": "",
      "output_col": "vix_rolling_decline"
    }
  ],
  "param_grid": {
    "vix_decline_threshold": [-3, -5, -7]
  },
  "entry_rules": [
    "is_post_cpi == True",
    "cpi_worse == True",
    "cpi_pre_es_3d < 0",
    "es_down_1pct_from_825 == True",
    "vix_rolling_decline <= @vix_decline_threshold"
  ],
  "exit_conditions": {
    "stop_loss_pct": 1.0,
    "take_profit_pct": 4.0,
    "trailing_stop_loss_pct": 2.0
  }
}